// -*- mode: jsonc -*-
{
    "layer": "top",
    "margin-top": 0,
    "margin-left": 0,
    "margin-right": 0,
    "margin-bottom": 0,
    "modules-left": ["hyprland/workspaces", "sway/workspaces", "custom/separator", "sway/mode", "mpris"],
    "modules-center": ["clock"],
    "modules-right": ["cpu", "memory", "disk", "temperature", "battery", "wireplumber", "bluetooth",  "network", "custom/notification"],

    // modules

    "hyprland/window": {
      	"format": "<span color=\"#DDDFFF\">{title}</span>",
        "max-length": 80
    },

    "hyprland/workspaces": {
  	    "format": "{icon}",
        "format-icons": {
            "9": " ÔÜº ",
            "10": " Ó¥© ",
            "11": " Û∞áÆ ",
            "12": " Û∞Ñú "
        },
  	    "on-click": "activate",
  	    "sort-by-number": true
    },

    "sway/window": {
	      "format": "<span color=\"#DDDFFF\">{title}</span>",
        "max-length": 80
    },

    "sway/mode": {
	      "format": "{}",
	      "max-length": 50
    },

    "sway/workspaces": {
  	    "format": "{icon}",
  	    "on-click": "activate",
  	    "sort-by-number": true,
	      "format-icons": {
		        "10": "  ÔÜº ",
		        "11": "  ÓÖò "
	}
    },

    "backlight": {
        "device": "intel_backlight",
        "format": "<span font='11' rise='-3pt'>{icon}</span> {percent}%",
        "tooltip-format": "{percent}% {icon}",
        "format-icons": ["Óêå", "Óîò"]
    },

    "battery": {
	      "states": {
	    	"warning": 20
	      },
        "format": "<span font='11'>{icon}</span> {capacity}%",
      	"format-charging": "<span font='12'>Û±êå</span> {capacity}%",
        "format-warning": "<span font='11'>{icon}</span> {capacity}%",
        "format-icons": ["Û∞Å∫", "Û∞Åº", "Û∞Åæ", "Û∞ÇÄ", "Û∞ÇÇ"]
    },

    "bluetooth": {
	// "controller": "controller1", // specify the alias of the controller if there are more than 1 on the system
	      "format": "<span font='12'>Û∞ÇØ</span> {status}",
	      "format-disabled": "<span font='12'>Û∞Ç≤</span> ---", // an empty format will hide the module
	      "format-connected": "<span font='12'>Û∞Ç±</span> {num_connections}",
	      "tooltip-format": "{controller_alias}\t{controller_address}",
	      "tooltip-format-connected": "{controller_alias}\t{controller_address}\n\n{device_enumerate}",
	      "tooltip-format-enumerate-connected": "{device_alias}\t{device_address}"
    },

    "clock": {
	      "format": "{:%A  %I:%M %p}",
        "format-alt": "{:%B %d  %I:%M %p}"
    },
   
    "cpu": {
        "interval": 10,
        "format": "Ôãõ {}%",
        "max-length": 10
    },

    "custom/icon": {
  	    "format": "Ôåç"
    },

   "custom/separator": {
  	    "format": "|"
    },


    "disk": {
        "interval": 30,
        "format": "<span font='11'>Û∞âñ</span> {specific_used:0.0f} GB",
	      "unit": "GB",
        "path": "/"
    },

    "memory": {
        "interval": 30,
        "format": "<span font='11'>Û∞†ò</span> {}%"
    },

    "mpris": {
	      "format": "{player_icon} <i>{dynamic}</i>",
      	"format-paused": "{status_icon} <i>{dynamic}</i>",
        "dynamic-len": 80,
      	"player-icons": {
          	"default": "ÔÅå ",
        		"mpv": "üéµ",
            "firefox": "Ôâ©  "
      	},
      	"status-icons": {
        		"paused": "ÔÅã  "
      	},
    },

    "network": {
        "format": "",
        "format-wifi": "<span font='11'>Û∞ñ©</span> {signalStrength}%",
        "format-ethernet": "{ipaddr}/{cidr} <span font='11' rise='0pt'>Û∞àÄ</span>",
        "format-disconnected": "", //An empty format will hide the module.
        "tooltip-format": "{ifname} via {gwaddr} Û∞äó",
        "tooltip-format-wifi": "{essid} ({signalStrength}%) Ôá´",
        "tooltip-format-ethernet": "{ifname} ÔÉÅ",
        "tooltip-format-disconnected": "Disconnected",
        "max-length": 50
    },

    "custom/notification": {
        "tooltip": false,
        "format": "{icon}",
        "format-icons": {
            "notification": "<span foreground='white'>ÔÇ¢</span><span foreground='red'><sup>ÔëÑ</sup></span>",
            "none": "<span foreground='white'>ÔÇ¢</span>",
            "dnd-notification": "Ôá∑<span foreground='red'><sup>ÔëÑ</sup></span>",
            "dnd-none": "Ôá∑",
